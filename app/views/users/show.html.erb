<% content_for(:html_title) { "My Personal Page" } %>
<div class="container-fluid g-0 mb-md-5">
  <div class="row mb-md-5">
    <div class="col-md-9 mt-md-5 bg-white rounded-3 m-auto">
      <h2 class="fs-2 text-center ml-md-4 mt-md-5">
        Dashboard
      </h2>
      <div class="container-fluid g-0">
        <div class="list-group col-md-11 mx-auto mt-md-4 list-group-horizontal-sm" role="tablist">
          <a class="list-group-item list-group-item-action col-md-3 flex-fill list-home-list" data-bs-toggle="list" href="#owner" role="tab" aria-controls="home">My Properties</a>
          <a class="list-group-item list-group-item-action col-md-3 flex-fill list-home-list" data-bs-toggle="list" href="#favourites" role="tab" aria-controls="home">My Favourites</a>
          <a class="list-group-item list-group-item-action col-md-3 flex-fill list-home-list" data-bs-toggle="list" href="#saved-searches" role="tab" aria-controls="home">My Searches</a>
          <a class="list-group-item list-group-item-action col-md-3 flex-fill active list-home-list" data-bs-toggle="list" href="#my-details" role="tab" aria-controls="home">My Details</a>
          <a class="list-group-item list-group-item-action col-md-3 flex-fill list-home-list" data-bs-toggle="list" href="#my-password" role="tab" aria-controls="home">My Password</a>
        </div>
      </div>
      <div class="container-fluid g-0">
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show mb-md-5" id="owner" role="tabpanel" aria-labelledby="list-home-list">
            <%= render "owner" %>
          </div>
          <div class="tab-pane fade mb-md-5" id="favourites" role="tabpanel" aria-labelledby="list-profile-list">
            <%= render "favourites" %>
          </div>
          <div class="tab-pane fade show active mb-md-5" id="my-details" role="tabpanel" aria-labelledby="list-profile-list">
            <%= render "my_details" %>
          </div>
          <div class="tab-pane fade mb-md-5" id="my-password" role="tabpanel" aria-labelledby="list-profile-list">
            <%= render "password" %>
          </div>
          <div class="tab-pane fade mb-md-5" id="saved-searches" role="tabpanel" aria-labelledby="list-profile-list">
            <div class="col-md-12 align-center">
              <%= render "users/saved_searches" unless device_is_mobile? %>
              <%= render "apartments/saved_searches" if device_is_mobile? %>
              <div class="mobile-break"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>