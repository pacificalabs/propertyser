<div class="row mt-md-5">
  <div class="col-md-3" id="contact-column"></div>
  <div class="col-md-6">
    <%= form_for :user, url: change_password_path, local:true, class:"form-group" do |f| %>
      <div class="form-row">
        <div class="col-md-12">
          <%= f.label :password, "Old Password", style: "font-size:small;" %>
          <%= f.password_field :old_password, placeholder: "Your current password", class: "form-control mb-md-3" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-6">
          <%= f.label :password, "New Password", style: "font-size:small;" %>
          <%= f.password_field :password, placeholder: "Your new password", class: "form-control mb-md-3" %>
        </div>
        <div class="col-md-6">
          <%= f.label :password_confirmation, "Confirm Password", style: "font-size:small;" %>
          <%= f.password_field :password_confirmation, placeholder: "Your new password", class: "form-control mb-md-3" %>
        </div>
      </div>
      <%= f.submit "Create New Password", id: "contact-us-send", class:"btn btn-outline-primary col-md-12"  %>
      <div class="actions">
      <% end %>
    </div>
    <div class="mobile-break"></div>
  </div>
  <div class="col-md-4"></div>
</div>