<div class="dropstart">
  <a class="btn btn-primary dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
    <%= current_user.username %>
  </a>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <li>
      <%= link_to new_apartment_path, class: 'dropdown-item' do %>
        <div class="" style="color:white;width:1rem;">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          List a Property
        </div>
      <% end %>
    </li>
    <li>
      <a class="dropdown-item" href="<%= user_path(id: current_user.id) %>">
        <div class="" style="color:white;width:1rem;">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
          My Personal Page
        </div>
      </a>
    </li>
    <% if current_user.is_admin? %>
      <li>
        <a class="dropdown-item" href="<%= admin_directory_path %>">
          <div class="" style="color:white;width:1rem;">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6V5.25A2.25 2.25 0 0 1 12.75 3h3A2.25 2.25 0 0 1 18 5.25v.75m-7.5 0h7.5m-7.5 0a2.25 2.25 0 0 0-2.25 2.25v9a2.25 2.25 0 0 0 2.25 2.25h7.5a2.25 2.25 0 0 0 2.25-2.25v-9A2.25 2.25 0 0 0 17.25 6h-7.5z" />
            </svg>
            Directory
          </div>
        </a>
      </li>
      <li>
        <a class="dropdown-item" href="<%= admin_path %>">
          <div class="" style="color:white;width:1rem;">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 6h6v6H9zM9 12v6H6v-6h3zm6 0v6h3v-6h-3zM6 9h3V6H6v3zm9-3v3h3V6h-3z" />
            </svg>
            Admin
          </div>
        </a>
      </li>
    <% end %>
    <li>
      <a class="dropdown-item" href=<%= logout_path %>>
        <div class="" style="color:white;width:1rem;">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
          </svg>
          Logout
        </div>
      </a>
    </li>
  </ul>
</div>