<!-- app/views/admin/tags/index.html.erb -->
<div class="container mt-3 m-auto">
  <h1>Listing Tags</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Slug</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= tag.slug %></td>
          <td>
            <%= link_to 'Show', admin_tag_path(tag), class: 'btn btn-info btn-sm' %> |
            <%= link_to 'Edit', edit_admin_tag_path(tag), class: 'btn btn-primary btn-sm' %> |
            <%= link_to 'Delete', admin_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Tag', new_admin_tag_path, class: 'btn btn-success' %>
</div>
