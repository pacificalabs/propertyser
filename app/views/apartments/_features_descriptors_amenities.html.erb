<% if @features.present? %>
  <h5 class="mt-md-3"><%= image_tag("dark_icons/icons8-extra-features-50.png", class: "iconz mr-md-1 mb-md-3") %>Features</h5>
<% end %>
<% if apartment.strata.present? %>
  <span data="placement-top" class="mt-md-1 tt" data="toggle-tooltip" title="Strata Title">
    <%= image_tag("white_icons/icons8-apartment-50.png", class: "iconz mr-md-1 my-md-1") %>
    <%= image_tag("white_icons/icons8-checkmark-50.png", class: "iconz mr-md-1 my-md-1") %>
  </span>
<% end %>
<% if @features.present? %>
  <div class="mt-md-1">
    <% @features&.each do|feature| %>
      <%= image_tag(@feature_icons[feature.to_sym].to_s, title:feature.humanize.titlecase, class: "tt iconz mr-md-1 my-md-1",data:{toggle:"tooltip", placement:"top"}) %>
    <% end %>
  </div>
<% end %>
<% if @amenities.present? %>
  <div class="mt-md-1">
    <h5 class="mt-md-3">Amenities</h5>
    <% @amenities&.each do|amenity| %>
      <%= image_tag(@amenity_icons[amenity.to_sym].to_s, title: amenity.humanize.titlecase,class: "tt iconz mr-md-1 my-md-1",data:{toggle:"tooltip", placement:"bottom"}) %>
    <% end %>
  </div>
<% end %>
<div class="mt-md-2">
  <h5><%= image_tag("dark_icons/icons8-create-50.png", class: "iconz mr-md-1 mb-md-3") %>More Details</h5>
  <p class="text-wrap text-break show-property"><%= apartment.description.present? ? apartment.description : "Not Provided"  %></p>
</div>