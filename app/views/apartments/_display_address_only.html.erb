<% if apartment.slug_address.length < 19 %>
  <% if current_user.blank? %>
    <h6 class="card-title ml-3 mt-3 tt disable-select blur" title="Become a member to see the full address." data-toggle="tooltip" data-placement="top">
      <%= apartment.slug_address %>
    </h6>
  <% else %>
    <h6 class="card-title ml-3 mt-3">
      <%= link_to apartment.slug_address, apartment_path(apartment, title: search_title), class: "alert-link nounderline" %>
    </h6>
  <% end %>
