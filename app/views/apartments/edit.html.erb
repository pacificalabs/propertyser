<% content_for(:html_title) { "Edit info for #{@apartment.full_address} - #{t("business.name")}" } %>
<div class="container-fluid mb-md-5">
  <div class="row mb-md-5">
    <div class="col-md-9 order-sm-2 mt-md-5 mx-auto bg-white rounded shadow-sm">
      <%= form_for @apartment, html: {class: "form-row property-title"} do |f| %>
        <div class="col-md-12">
          <h2 class="text-center ml-md-4 mt-md-5">EDIT PROPERTY DETAILS</h2>
          <%= f.label :name, "NAME", class: "text-md-left" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Property Name or Description in One Sentence" %>
          <%= render "address", f: f %>
        </div>
        <div class="col-md-3">
          <div class="form-group mt-md-2">
            <%= f.label :display_option, "Display Option" %>
            <%= f.select :display_option, options_for_select([['Display Name', 'name'], ['Display Address', 'address'], ['Display Both', 'both']], @apartment.display_option), {}, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-12">
          <%= render partial: "bed_bath_parking",locals: { f: f, apartment: @apartment} %>
        </div>
        <div class="col-md-12">
          <%#= render "features", f: f, apartment: @apartment, feature_icons: @feature_icons %>
        </div>
        <div class="col-md-12">
          <%#= render "descriptors", f: f, apartment: @apartment, descriptor_icons: @descriptor_icons %>
        </div>
        <div class="col-md-12">
          <%#= render "amenities", f: f, apartment: @apartment, amenity_icons: @amenity_icons %>
        </div>
        <div class="col-md-12">
          <%= render "values",f:f, apartment: @apartment  %>
        </div>
        <div class="col-md-12">
          <br>
          <%= f.submit "SAVE AND LOAD PHOTOS", class: "btn btn-primary col-md-12 mb-md-5",id: "edit-submit", method: "patch" %>
        </div>
        <div class="col-md-12">
          <%= link_to "Delete This Property", admin_deletion_path(@apartment), class: "btn btn-outline-primary", onclick: "return confirm('Are you sure you want to delete this property?');" %>
          <%#= render "photos", f:f %>
        </div>
      <% end %>
    </div>
    <div class="mobile-break"></div>
  </div>
</div>
