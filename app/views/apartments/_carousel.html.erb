<div class="order-1 container-fluid">
    <div id="carouselExampleControls" class="carousel slide img-thumbnail mt-md-5" data-ride="carousel">
      <div class="carousel-inner">
      <% @apartment.photos.each_with_index do |pic, index| %>
        <% active = "active" if index == 0 %>
        <% desc = PhotoDescription.find_by(:photo_id => pic.id) %>
        <div class="carousel-item <%= active %>" style="background-image: url(<%= apartment_carousel_image_url(pic) %>) ">
          <div class="carousel-caption d-none d-sm-block">
              <h6 class="<%#= text %>"><%= desc.description.present? ? desc&.description&.upcase : "" %></h6>
            </div>
          </div>
          <% end %>
        </div>
<% if @apartment.photos.size > 1 %>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <% end %>
      </div>
      <div class="col-md-12 text-center new-caption-area mt-md-2">PHOTOS MISSING</div>  
</div>
