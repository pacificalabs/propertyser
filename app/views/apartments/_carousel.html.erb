<div class="order-1 container-fluid g-0">
  <div id="carouselExampleControls" class="carousel slide img-thumbnail mt-md-5" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @apartment.photos.each_with_index do |pic, index| %>
        <% active = (index == 0) ? "active" : "" %>
        <% desc = PhotoDescription.find_by(blob_id: pic.id) %>
        <div class="carousel-item <%= active %>" style="background-image: url('<%= CGI.escapeHTML(apartment_carousel_image_url(pic)) %>');">
          <div class="carousel-caption d-none d-sm-block">
            <!-- Add caption content here -->
            <h3><%= desc&.description&.present? ? desc.description.upcase : "" %></h3>
          </div>
        </div>
      <% end %>
    </div>
    <% if @apartment.photos.size > 1 %>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    <% elsif @apartment.photos.blank? %>
      <div class="col-md-12 text-center new-caption-area mt-md-2">PHOTOS MISSING</div>
    <% end %>
  </div>
</div>