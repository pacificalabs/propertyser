<% content_for(:html_title) { "Sell Your Property - #{t("business.name")}" } %>
<div class="container-fluid g-0 mb-md-5">
  <div class="row">
    <div class="bg-white rounded-3 m-auto col-lg-10 col-md-10 mt-md-5 p-4">
      <%= form_for @apartment, class: 'form-group' do |f| %>
        <%= render "saved_searches" %>
        <div class="row">
          <div class="col-lg-6  align-items-stretch d-flex buy-property-data">
            <div class='row buy-property-data-div' id="part-1" label="address">
              <div class="col-md-12">
                <%= render "address", f: f %>
              </div>
            </div>
            <div class='row buy-property-data-div d-none' id="part-2" label="bed-bath-parking">
              <div class="col-md-12">
                <%= render "bed_bath_parking", f: f, apartment: @apartment %>
              </div>
            </div>
            <div class='row buy-property-data-div d-none' id="part-3" label="values">
              <div class="col-md-12">
                <%= render "values", f:f, apartment: @apartment  %>
              </div>
            </div>
            <div class='row buy-property-data-div d-none' id="part-4" label="photos">
              <div class="col-md-12">
                <%= render "photos/add", f:f, apartment: @apartment  %>
              </div>
            </div>
            <div class='row buy-property-data-div d-none' id="part-5" label="save">
              <div class="col-md-12">
                <br>
                <%= f.submit "SAVE DRAFT and LOAD PHOTOS", class: "btn btn-outline-primary col-md-12 mb-md-5", id: "sell-submit" %>
              </div>
            </div>
          </div>
          <div class='row buy-property-data-div d-none' id="part-6" label="descriptors">
            <div class="col-md-12">
              <%#= render "descriptors", f: f, apartment: @apartment, descriptor_icons: @descriptor_icons %>
            </div>
          </div>
          <div class='row buy-property-data-div d-none' id="part-7" label="amenities">
            <div class="col-md-12">
              <%#= render "amenities", f: f, apartment: @apartment, amenity_icons: @amenity_icons %>
            </div>
          </div>
          <div class='row buy-property-data-div d-none' id="part-8" label="features">
            <div class="col-md-12">
              <%#= render "features", f: f, apartment: @apartment, feature_icons: @feature_icons %>
            </div>
          </div>
          <div class="col-lg-6 position-relative overflow-hidden">
            <div class="w-100 home-img-item d-flex align-items-center flex-wrap" id="item-display">
              <%= image_tag "form1-removebg-preview.png", class: 'home-icon' %>
              <div class="mb-2 w-100 d-flex justify-content-center side-icon-bed flex-wrap">
              </div>
              <div class="mb-2 w-100 d-flex justify-content-center side-icon-bath flex-wrap">
              </div>
              <div class="w-100 d-flex justify-content-center side-icon-parking flex-wrap">
              </div>
            </div>
            <ul class="locations-select-data">
            </ul>
          </div>
        </div>
        <div class="mt-5 mobile-buy-button d-flex justify-content-center position-relative">
          <div class="progress">
            <div class="circle active part-1 location-circle" circlevalue="part-1" >
            </div>
            <div class="circle part-2 bed-circle" circlevalue="part-2">
            </div>
            <div class="circle part-3 bath-circle" circlevalue="part-3">
            </div>
            <div class="circle part-4 car-circle" circlevalue="part-4">
            </div>
            <div class="circle part-5 price-circle" circlevalue="part-5">
            </div>
          </div>
          <span class="btn my-2 me-5 buy-back-button shadow-none disable-btn" nextvalue="part-1" id="back-button-buy-property" aria-hidden="true">
            <svg width="50" height="50" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M27.4198 36.4081L17.5878 26.5067C17.374 26.2915 17.223 26.0583 17.1347 25.8072C17.0449 25.5561 17 25.287 17 25C17 24.713 17.0449 24.4439 17.1347 24.1928C17.223 23.9417 17.374 23.7085 17.5878 23.4933L27.4198 13.5919C27.8117 13.1973 28.3104 13 28.916 13C29.5216 13 30.0204 13.1973 30.4122 13.5919C30.8041 13.9865 31 14.4888 31 15.0987C31 15.7085 30.8041 16.2108 30.4122 16.6054L22.0763 25L30.4122 33.3946C30.8041 33.7892 31 34.2915 31 34.9013C31 35.5112 30.8041 36.0135 30.4122 36.4081C30.0204 36.8027 29.5216 37 28.916 37C28.3104 37 27.8117 36.8027 27.4198 36.4081Z" fill="#18A2B8"/>
              <circle cx="25" cy="25" r="21.25" stroke="#18A2B8" stroke-width="1.5"/>
            </svg>
          </span>
          <span class="btn my-2 ms-5 buy-next-button shadow-none" nextvalue="part-1" id='next-button-buy-property'>
            <svg width="50" height="50" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M22.5802 13.5919L32.4122 23.4933C32.626 23.7085 32.777 23.9417 32.8653 24.1928C32.9551 24.4439 33 24.713 33 25C33 25.287 32.9551 25.5561 32.8653 25.8072C32.777 26.0583 32.626 26.2915 32.4122 26.5067L22.5802 36.4081C22.1883 36.8027 21.6896 37 21.084 37C20.4784 37 19.9796 36.8027 19.5878 36.4081C19.1959 36.0135 19 35.5112 19 34.9013C19 34.2915 19.1959 33.7892 19.5878 33.3946L27.9237 25L19.5878 16.6054C19.1959 16.2108 19 15.7085 19 15.0987C19 14.4888 19.1959 13.9865 19.5878 13.5919C19.9796 13.1973 20.4784 13 21.084 13C21.6896 13 22.1883 13.1973 22.5802 13.5919Z" fill="#18A2B8"/>
              <circle cx="25" cy="25" r="21.25" stroke="#18A2B8" stroke-width="1.5"/>
            </svg>
          </span>
          <%#= f.submit "SEARCH", class: "btn btn-outline-primary my-3 d-none", id: "startSearching" %>
        </div>
      <% end %>
    </div>
</div>
</div>