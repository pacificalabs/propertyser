<div class="mobile-break"></div>
<p class="mt-md-3">DESCRIPTION</p>
<p>What keywords best describe your property? </p>
<div class="row">
  <%= f.fields_for @descriptor do |d| %>
    <% a = apartment.descriptor.attributes.keys %>
    <% array = a.reject { |v| ["apartment_id","id","created_at","updated_at"].include? v } %>
    <% array.each do |item| %>
      <div class="col-md-4">
        <%= d.check_box item.to_sym,{checked: apartment.descriptor[item], include_id: false, multiple: true}, true, false %>
        <span>
          <%= image_tag(@descriptor_icons[item.to_sym].to_s, class: "#{'iconz' if action_name == 'show'} #{'feature-icons-edit-new' if action_name == "edit" || action_name == "new"} ml-md-2") %>
        </span>
        <%= '<br>'.html_safe if device_is_tablet? %>
        <span class="icon-span">
          <%= f.label item.to_sym, item.humanize.upcase, class: "align-center mt-md-2" %>
        </span>
      </div>
    <% end %>
  <% end %>
</div>
