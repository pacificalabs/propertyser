<div class='container-xxl py-5'>
  <div class='container'>
    <div class='text-center mx-auto mb-5 fadeInUp'  style='max-width: 600px;'>
      <h1 class='mb-3'>New User</h1>
    </div>
    <div class='row g-4'>
      <div class='col-md-6 fadeInUp' >
        <%= image_tag(get_aws_url('image5traditionalhouse.jpg'), class: 'img-fluid') %>
      </div>
      <div class='col-md-6'>
        <div class='wow fadeInUp' data-wow-delay='0.5s'>
          <%= form_with url: signup_path, class: 'form-group' do |f| %>
            <div class='row g-3'>
              <div class='col-12'>
                <p class='mb-4'>Choose a Username (to protect your identity)</p>
                <div class='form-floating'>
                  <%= f.text_field :username, autofocus: true, value: @user&.username, required: true, class: 'form-control', placeholder: 'Nickname' %>
                  <%= f.label :username %>
                </div>
              </div>
              <p>Complete your details</p>
              <div class='col-md-6'>
                <div class='form-floating'>
                  <%= f.text_field :firstname, placeholder:'First Name', value: @user&.firstname, required: true, class: 'form-control' %>
                  <%= f.label :first_name %>
                </div>
              </div>
              <div class='col-md-6'>
                <div class='form-floating'>
                  <%= f.text_field :surname, placeholder: 'Surname', value: @user&.surname, required: true, class: 'form-control' %>
                  <%= f.label :surname %>
                </div>
              </div>
              <div class='col-12'>
                <div class='form-floating'>
                  <%= f.telephone_field :phone, placeholder: 'Contact Number', value: @user&.phone, required: true, class: 'form-control' %>
                  <%= f.label :contact_number %>
                </div>
              </div>
              <div class='col-12'>
                <div class='form-floating'>
                  <%= f.email_field :email, autocomplete: 'email', value: @user&.email, placeholder: 'Email', required: true, class: 'form-control' %>
                  <%= f.label :email %>
                </div>
              </div>
              <div class='col-md-6'>
                <div class='form-floating'>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'Password', required: true, class: 'form-control' %>
                  <%= f.label :password %>
                </div>
              </div>
              <div class='col-md-6'>
                <div class='form-floating'>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                  <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Confirm Password', required: true, class: 'form-control' %>
                  <%= f.label :password_confirmation %>
                </div>
              </div>
              <div class='col-12'>
                <div class='form-floating'>
                  <p class='mt-3'>Add a profile picture</p>
                  <%= f.file_field :avatar, direct_upload: false %>
                </div>
              </div>
              <div class='col-md-6'>
                <%= f.submit 'Sign up', class:'btn btn-primary w-100 py-3'  %>
              </div>
              <div class='col-md-6'>
                <%= link_to 'Existing User?', mobile_login_path, class: 'btn btn-primary w-100 py-3' %>
              </div>
              <div class='col-12'>
                <small>By signing up to <%= t("business.name") %>, I agree to the  <strong><a class='about nounderline' href='/terms-and-conditions'> <b>Conditions of Use</b></a></strong> and <a class='about nounderline' href='/privacy-policy'> <b> Privacy policy.</b></a></small>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>