<div class="container-fluid g-0 nav-bar">
  <nav class="navbar navbar-expand-lg navbar-light py-0 px-4">
    <%= link_to root_path, class: 'navbar-brand d-flex align-items-center text-center' do %>
      <div class="nav_logo">
        <%= image_tag "ruyi_block_logo.svg", height: "60" %>
      </div>
    <% end %>
    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
      <span class="navbar-toggler-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 18C3.71667 18 3.47933 17.904 3.288 17.712C3.096 17.5207 3 17.2833 3 17C3 16.7167 3.096 16.4793 3.288 16.288C3.47933 16.096 3.71667 16 4 16H20C20.2833 16 20.5207 16.096 20.712 16.288C20.904 16.4793 21 16.7167 21 17C21 17.2833 20.904 17.5207 20.712 17.712C20.5207 17.904 20.2833 18 20 18H4ZM4 13C3.71667 13 3.47933 12.904 3.288 12.712C3.096 12.5207 3 12.2833 3 12C3 11.7167 3.096 11.479 3.288 11.287C3.47933 11.0957 3.71667 11 4 11H20C20.2833 11 20.5207 11.0957 20.712 11.287C20.904 11.479 21 11.7167 21 12C21 12.2833 20.904 12.5207 20.712 12.712C20.5207 12.904 20.2833 13 20 13H4ZM4 8C3.71667 8 3.47933 7.90433 3.288 7.713C3.096 7.521 3 7.28333 3 7C3 6.71667 3.096 6.479 3.288 6.287C3.47933 6.09567 3.71667 6 4 6H20C20.2833 6 20.5207 6.09567 20.712 6.287C20.904 6.479 21 6.71667 21 7C21 7.28333 20.904 7.521 20.712 7.713C20.5207 7.90433 20.2833 8 20 8H4Z" fill="white" />
        </svg>
      </span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <div class="navbar-nav ms-auto">
        <% @tags.each do |tag| %>
          <% if tag.parent_tags.empty? %>
            <% if tag.child_tags.any? %>
              <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><%= tag.name %></a>
                <div class="dropdown-menu">
                  <% tag.child_tags.each do |child_tag| %>
                    <%= link_to child_tag.name, tag_path(child_tag), class: 'dropdown-item' %>
                  <% end %>
                </div>
              </div>
            <% else %>
              <%= link_to tag.name, tag_path(tag), class: 'nav-item nav-link' %>
            <% end %>
          <% end %>
        <% end %>
        <% if current_user.blank? %>
          <% unless ["search"].include? action_name %>
            <%= link_to 'GET STARTED', mobile_login_path, class: 'nav-item nav-link active' %>
          <% end %>
        <% else %>
          <%= render partial: 'users/dropdown' %>
        <% end %>
      </div>
    </div>
  </nav>
</div>